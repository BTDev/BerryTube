{
  "name": "berrytube-tools",
  "description": "Root package for shared tools between the different packages in this project.",
  "repository": "git@gitlab.com:berrytube/berrytube.git",
  "license": "ISC",
  "private": true,
  "scripts": {
    "prettier:check": "prettier --check \"./**/*.{js,ts,css,sass,json,md,yaml}\"",
    "prettier": "prettier --write \"./**/*.{js,ts,css,sass,json,md,yaml}\""
  },
  "dependencies": {
    "eslint": "^5.16.0",
    "husky": "^2.3.0",
    "prettier": "^1.17.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier:check"
    }
  }
}
